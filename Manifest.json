{
    "manifest_version":2,
    "name":"pixiv coment translation",
    "version":"1.0.0",

    "description":"Translate other languages in pixiv comments",
    "icons":{
        "16":"icon16.png",
        "48":"icon48.png",
        "128":"icon128.png"
    },
    "permissions": [
      "tabs",
      "https://www.pixiv.net/artworks/*"
    ],
    "background": {
        "scripts": [
          "Backscript.js"
        ],
        "persistent": false
      }
}